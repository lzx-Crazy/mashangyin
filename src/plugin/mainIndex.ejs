// TD期切换
function tabTd(e){
    if($(e).hasClass("on")){
        $(e).removeClass("on")
        $(e).html("TD")
    }else {
        $(e).addClass("on")
        $(e).html("期")
    }
}
// 右侧切换
function miboxShow(e){
    
    if($(e).hasClass("on")){
        $(e).removeClass("on")
        $(".mi-hybox").animate({right:"-90%"},200)
        return false;
    } else {
        $(e).addClass("on")
        $(".mi-hybox").animate({right:"0"},200)
        return false;
    }
}


